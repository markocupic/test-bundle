{
    "name": "markocupic/test-bundle",
    "description": "This is only a demo bundle generated by markocupic/contao-bundle-creator-bundle",
    "keywords": [
        "contao",
        "bundle",
        "tag 3",
        "tag 4"
    ],
    "type": "contao-bundle",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Marko Cupic",
            "email": "m.cupic@gmx.ch",
            "homepage": "https://github.com/markocupic/test-bundle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/markocupic/test-bundle/issues",
        "source": "https://github.com/markocupic/test-bundle"
    },
    "require": {
        "php": "^8.1",
        "contao/core-bundle": "^5.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.12",
        "contao/easy-coding-standard": "^6.13",
        "phpunit/phpunit": "^9.5",
    },
    "autoload": {
        "psr-4": {
            "Markocupic\\TestBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "contao-components/installer": false,
            "contao/manager-plugin": false,
            "contao-community-alliance/composer-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "contao-manager-plugin": "Markocupic\\TestBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "unit-tests": "@php tools/phpunit/vendor/bin/phpunit -c tools/phpunit/phpunit.xml.dist",
        "cs-fixer": "@php tools/ecs/vendor/bin/ecs check config/ contao/ src/ templates/ tests/ --config tools/ecs/config/default.php --fix --ansi"
    },
    "version": "1.0"
}
